@*Program powstał na Wydziale Informatyki Politechniki Białostockiej*@
@model IEnumerable<My_Company.Models.Address>


<div class="p-2 ">
    <div class="p-2 bg-light">
        <h6 class="text-uppercase pt-2 font-weight-bolder pl-2">Zapisane adresy</h6>
    </div>
    <div class="pl-3">
        <div class="row mt-2">
            @foreach (var address in Model)
            {

                <div class="col-12 col-md-6 col-lg-4 d-flex flex-column addressModifyContainer" data-id="@address.Id">
                    <div class="p-4 mt-3 border border-secondary flex-grow-1">
                        <div>
                            <span class="p-0">@Html.DisplayFor(m => address.FirstName) @Html.DisplayFor(m => address.LastName)</span>
                        </div>
                        <div>
                            <small>@Html.DisplayFor(m => address.Street)</small>
                        </div>
                        <div>
                            <small>@Html.DisplayFor(m => address.ZipCode) @Html.DisplayFor(m => address.City)</small>
                        </div>
                        <div>
                            <small>tel. @Html.DisplayFor(m => address.PhoneNumber)</small>
                        </div>
                        <div class="d-flex justify-content-center p-2">
                            <button type="button" class="btn btn-link text-danger deleteAddress" data-id="@address.Id"><i class="bi bi-trash2"></i> Usuń ten adres</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
