@model My_Company.ViewModels.PagedList<My_Company.Areas.Shop.ViewModels.Products.ListItemViewModel>

@using My_Company.Areas.Warehouse.EnumTypes

<div class="d-flex justify-content-between row align-items-center my-2">

    <div class="col-sm-4 col-6 d-flex align-items-center mt-3">
        <div class="p-2">
            <p><b>@((Model.CurrentPage - 1)*Model.PageSize + 1)</b>-<b>@(Model.CurrentPage*Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.CurrentPage * Model.PageSize)</b> z <b>@Model.TotalCount</b> produktów</p>
        </div>
    </div>
    <div class="col-sm-4 col-6 d-flex justify-content-md-center align-items-center">
        <div class="p-2">
            Na stronie
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn border-0  @(Model.PageSize == 12 ? "btn-secondary" : "btn-outline-secondary") changePageSize" value="12">12</button>
            <button type="button" class="btn border-0  @(Model.PageSize == 24 ? "btn-secondary" : "btn-outline-secondary") changePageSize" value="24">24</button>
            <button type="button" class="btn border-0  @(Model.PageSize == 48 ? "btn-secondary" : "btn-outline-secondary") changePageSize" value="48">48</button>
        </div>
    </div>
    <div class="col-sm-4 col-12 d-flex justify-content-sm-end">
        <div class="form-inline flex-sm-wrap flex-nowrap">
            <div class="p-2 control-label">Sortowanie</div> <select class="form-control border-0"><option>Domyślne</option></select>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-md-6 col-lg-4 my-2">
            <div class="card">
                <img class="card-img-top" src="@Url.Content(item.PhotoUrl)" alt="@item.Name">
                <div class="card-body mb-0">
                    <p class=" m-0"><small class="text-secondary">@Html.DisplayFor(model => item.CategoryName)</small></p>
                    <h5 class="text-uppercase my-1"><a class="text-dark" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(model => item.Name)</a></h5>
                    <p><small class="text-secondary">@Html.DisplayFor(model => item.Price)</small></p>
                </div>
            </div>
        </div>

    }
</div>
<nav class="pt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled":"")">
            <a class="page-link" href="#"><span aria-hidden="true">&laquo;</span></a>
        </li>
        @if (Model.TotalPages <= 5)
        {
            for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">@i</a></li>
            }
        }
        else if (Model.CurrentPage < 4)
        {
            <li class="page-item @(1 == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">1</a></li>
            <li class="page-item @(2 == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">2</a></li>
            <li class="page-item @(3 == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">3</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="#">@(Model.TotalPages - 1)</a></li>
            <li class="page-item"><a class="page-link" href="#">@Model.TotalPages</a></li>
        }
        else if (Model.CurrentPage + 3 > Model.TotalPages)
        {
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item "><a class="page-link" href="#">2</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item @(Model.TotalPages - 2 == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">@(Model.TotalPages - 2)</a></li>
            <li class="page-item @(Model.TotalPages - 1 == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">@(Model.TotalPages - 1)</a></li>
            <li class="page-item @(Model.TotalPages == Model.CurrentPage ? "active" : "")"><a class="page-link" href="#">@(Model.TotalPages )</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="#">@(Model.CurrentPage - 1)</a></li>
            <li class="page-item active"><a class="page-link" href="#">@(Model.CurrentPage)</a></li>
            <li class="page-item"><a class="page-link" href="#">@(Model.CurrentPage + 1)</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="#">@(Model.TotalPages )</a></li>
        }
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled":"")">
            <a class="page-link" href="#"><span aria-hidden="true">&raquo;</span></a>
        </li>
    </ul>
</nav>

<style>
    .card-img-top {
        min-height: 35vh;
        max-height: 35vh;
        object-fit: scale-down;
    }
</style>
