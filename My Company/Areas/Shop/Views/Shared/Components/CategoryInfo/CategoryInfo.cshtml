@*Program powstał na Wydziale Informatyki Politechniki Białostockiej*@
@model List<Category>

<ol class="breadcrumb bg-transparent justify-content-center">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Strona Główna</a></li>
    @if (Model.Count == 0)
    {
        <li class="breadcrumb-item active" aria-current="page">Wszystkie kategorie</li>
    }
    else
    {
        int i = 0;
        @foreach (var item in Model)
        {
            if (i == Model.Count - 1)
            {
                <li class="breadcrumb-item active" aria-current="page">@item.CategoryName</li>
            }
            else
            {
                <li class="breadcrumb-item"><a asp-route-id="@item.Id">@item.CategoryName</a></li>
            }
            i++;
        }
    }
</ol>
<h6 class="display-4">@(Model.Count > 0 ? Model[Model.Count-1].CategoryName : "Wszystkie produkty")</h6>
<small><i>@(Model.Count > 0 ? Model[Model.Count -1].Description : "")</i></small>
