@*Program powstał na Wydziale Informatyki Politechniki Białostockiej*@
@model List<My_Company.Models.Configuration.PickingMethod>
@using My_Company.Dictionaries;

@foreach (var item in Model)
{
    <div class="form-check">
        <input class="form-check-input" type="radio" data-price="@((item.Price / 100.0M).ToString().Replace(',','.'))" data-val="true" data-val-required="Pole wymagane" name="DeliveryType" value="@item.Type">
        <label class="form-check-label">
            @DeliveryTypesDictionary.Dictionary[item.Type] (@String.Format("{0:C}", (decimal)(item.Price / 100.0M)))
        </label>
    </div>
}
