@model List<Category>
<div class="text-center">
    @await Component.InvokeAsync("CategoryInfo", new { categories = Model })
</div>
<div class="row px-md-3 mt-2">
    <div class="col-md-3 col-12">
        @await Component.InvokeAsync("CategoriesToSelect", new { categoryId = Model.Count == 0 ? (int?)null : Model[Model.Count - 1].Id })
        <hr />
        @await Component.InvokeAsync("Filters", new { categoryId = Model.Count == 0 ? (int?)null : Model[Model.Count - 1].Id })
    </div>
    <div class="col-md-9 col-12 position-relative">
        <div class="overlay" style="display:none"></div>
        <div class="spinner spinner-border spinnerHidden text-secondary"></div>
        <div id="products">

        </div>
    </div>
</div>

<style>
    .overlay {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-color: white;
        z-index: 99;
        opacity: 0.8;
    }
</style>