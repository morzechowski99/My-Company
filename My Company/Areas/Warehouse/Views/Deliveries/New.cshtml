@model My_Company.Areas.Warehouse.ViewModels.DeliveryViewModel

@{
    ViewData["Title"] = "Nowa dostawa";
}

<h1>Nowa dostawa</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="SupplierId" class="control-label"></label>
            <select asp-for="SupplierId" id="supplierSelect" class="form-control"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
    </div>
</div>
<hr />
<div id="addingProductContainer" style="display:none">
    <div class="row">
        <div class="col-md-6">
            <h6>Produkt</h6>
            <div class="form-group">
                <label class="control-label">
                    Kod EAN
                </label>
                <input type="number" id="eanInput" class="form-control" />
            </div>
            <div class="text-center">
                <b>LUB</b>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Wyszukaj produkt
                </label>
                <select id="productSelect" class="form-control"></select>
            </div>
            <div class="form-group" style="margin-top:-0.25rem!important">
                <label class="control-label">
                    Ilość
                </label>
                <input type="number" id="count" value="1" class="form-control" />
            </div>
        </div>
        <div class="col-md-6 border-left" id="sectorSelectContainer">
            <h6>Sektor</h6>
            <div class="form-group">
                <label class="control-label">
                    Kod sektora
                </label>
                <input type="number" id="sectorEanInput" class="form-control" />
            </div>
            <div class="text-center">
                <b>LUB</b>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Wybierz rząd
                </label>
                <select id="rowSelect" class="form-control" asp-items="ViewBag.rows">
                    <option selected value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Wybierz sektor
                </label>
                <select id="sectorSelect" class="form-control"></select>
            </div>
        </div>

    </div>
    <div class="d-flex my-2 justify-content-between align-items-end">
        <div id="selectedProduct">

        </div>
        <div>
            <button type="button" class="btn btn-success" disabled id="addProductsBtn">Dodaj</button>
        </div>
    </div>
    <hr />

    <h3>@Html.DisplayNameFor(m => m.Items)</h3>
    <div id="items"></div>
    <div class="d-flex justify-content-between" id="submitBtnContainer" >
        <a class="btn btn-outline-danger" asp-action="Index">Anuluj</a>
        <button type="button" id="submit" class="btn btn-outline-success" style="display:none">Zapisz</button>
    </div> 
</div>
<div class="spinner spinner-border spinnerHidden text-primary"></div>



<style>
    .figure img {
        height: 20vh;
        object-fit: scale-down;
    }

    .card-img-top {
        height: 20vh;
        object-fit: scale-down;
    }
</style>

@section Head {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.13.3/css/selectize.bootstrap4.min.css" integrity="sha512-MMojOrCQrqLg4Iarid2YMYyZ7pzjPeXKRvhW9nZqLo6kPBBTuvNET9DBVWptAo/Q20Fy11EIHM5ig4WlIrJfQw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

@section Scripts {
    <script src="~/lib/selectize/selectize.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/shared/selectizePlugins.js"></script>
    <script src="~/js/shared/shared.js"></script>
    <script src="~/js/Warehouse/Deliveries/New/New.js"></script>

}
