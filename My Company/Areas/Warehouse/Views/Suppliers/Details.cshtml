@*Program powstał na Wydziale Informatyki Politechniki Białostockiej*@
@model My_Company.Areas.Warehouse.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Szczegóły dostawcy";
}

<h1>Szczegóły dostawcy</h1>


<h4>@Html.DisplayFor(model => model.Name), @Html.DisplayNameFor(model => model.NIP): @Html.DisplayFor(model => model.NIP)</h4>
<hr />
<div>
    <h5>Adres</h5>

    <div class="row">

        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.Street)</strong> </label>
            <p>@Html.DisplayFor(model => model.Street)</p>
        </div>
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.PostalCode)</strong> </label>
            <p>@Html.DisplayFor(model => model.PostalCode)</p>
        </div>
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.City)</strong> </label>
            <p>@Html.DisplayFor(model => model.City)</p>
        </div>

    </div>
    <hr />
    <h5>Kontakt</h5>
    <div class="row">
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.PhoneNumber1)</strong> </label>
            <p>@Html.DisplayFor(model => model.PhoneNumber1)</p>
        </div>
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.PhoneNumber2)</strong> </label>
            <p>@Html.DisplayFor(model => model.PhoneNumber2)</p>
        </div>
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.Email)</strong> </label>
            <p>@Html.DisplayFor(model => model.Email)</p>
        </div>
        <div class="col-sm-4">
            <label class="p-0 m-0"><strong>@Html.DisplayNameFor(model => model.WebSite)</strong> </label>
            <p>@Html.DisplayFor(model => model.WebSite)</p>
        </div>
    </div>
    <hr />
</div>

<div class="d-flex justify-content-between">
    <a class="btn btn-outline-secondary" asp-action="Index">Wróć</a>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
</div>
