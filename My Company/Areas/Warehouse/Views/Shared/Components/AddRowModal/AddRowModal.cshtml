@*Program powstał na Wydziale Informatyki Politechniki Białostockiej*@
@model My_Company.Areas.Warehouse.ViewModels.NewWarehouseSectorViewModel

<div class="modal" tabindex="-1" role="dialog" id="addRowModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dodaj sektory</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addRowForm">
                    <div class="container-fluid">
                        <div class=" validationMessage text-danger">

                        </div>
                        <div class="row">

                            <div class="col-md-6 p-2">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" id="sectorNameInput" />
                                    <span asp-validation-for="Name" class="text-danger" id="nameValidate"></span>
                                </div>
                            </div>
                            <div class="col-md-6 p-2">
                                <div class="form-group">
                                    <label asp-for="Count" class="control-label"></label>
                                    <input asp-for="Count" id="sectorCountInput" class="form-control" />
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary " id="addRowBtn">Dodaj</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


