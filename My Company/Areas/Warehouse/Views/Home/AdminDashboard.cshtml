@section Head {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.2/chart.min.js" integrity="sha512-tMabqarPtykgDtdtSqCL3uLVM0gS1ZkUAVhRFu1vSEFgvB73niFQWJuvviDyBGBH22Lcau4rHB5p2K2T0Xvr6Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
<div class="spinner spinner-border spinnerHidden text-secondary"></div>
<div class="d-flex row justify-content-between align-items-center">
    <div class="col-md-8">
        <h2>Dashboard</h2>
    </div>
    <div class="col-md-2">
        <div class="form-group pt-3">
            <select class="form-control" id="modeSelect">
                <option value="0">Zamówienia</option>
                <option value="1">Kompletacje</option>
                <option value="2">Pakowanie</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group pt-3">
            <select class="form-control" id="rangeSelect">
                <option value="0">Dni</option>
                <option value="1">Miesiące</option>
                <option value="2">Lata</option>
            </select>
        </div>
    </div>

</div>
<hr />
<div style="position: relative; height:60vh; width:100%" id="canvasParent" class="chart-container">
    <canvas id="chart"></canvas>
</div>
@section Scripts {
    <script src="~/js/Warehouse/Home/AdminDashboard.js"></script>
}
