@model My_Company.Areas.Warehouse.ViewModels.EditCategoryViewModel

@{
    ViewData["Title"] = "Nowa Kategoria";
}

<h1>Edytuj</h1>

<h4>Kategoria</h4>
<hr />

<form asp-action="Edit">
    @Html.HiddenFor(model => model.Id)
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" id="nameInput" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-7">
                <h3>Drzewo kategorii</h3>
                <p>@ViewBag.Tree</p>
            </div>
        </div>

    <div class="d-flex justify-content-between">
        <div>
            <a class="btn btn-outline-secondary" asp-action="Index">Anuluj</a>
        </div>
        <div>
            <button class="btn btn-outline-primary" type="submit">Zapisz</button>
            <a class="btn btn-outline-secondary" asp-action="EditAttributes" asp-route-id="@Model.Id">Edytuj atrybuty</a>
        </div>
    </div>

</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
